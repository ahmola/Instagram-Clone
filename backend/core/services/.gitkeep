// dbdiagram

Table users {
  id bigint [primary key]
  username varchar 
  password_hash text [not null]
  bio text
  avatar_url text
  created_at timestamp
}

Table follows {
  follower_user_id integer
  followed_user_id integer
  created_at timestamp
  indexes {
    (follower_user_id, followed_user_id) [pk]
  }
}

Ref: users.id < follows.follower_user_id
Ref: users.id < follows.followed_user_id

Table posts {
  id bigserial [primary key]
  user_id bigint [not null]
  body text
  created_at timestamp
}

Ref: users.id < posts.user_id // many-to-one

Table post_images {
  id bigserial [pk]
  post_id bigserial [not null]
  url text [not null]
  seq int [default: 0]
}

Ref: posts.id < post_images.post_id

Table Comments {
  id bigint [pk]
  user_id bigint [not null]
  post_id bigserial [not null]
  content text [not null]
  created_at timestamp
}

Ref: users.id < Comments.user_id
Ref: posts.id < Comments.post_id